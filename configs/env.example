# Memory-X 环境变量配置模板
# 复制此文件为 .env 并填入实际值

# DashScope API配置
DASHSCOPE_API_KEY=your-dashscope-api-key-here

# 服务配置
MEMORY_DEBUG=true
MEMORY_SERVICE_HOST=0.0.0.0
MEMORY_SERVICE_PORT=5000

# 数据库配置
MEMORY_DB_TYPE=sqlite
MEMORY_DB_PATH=./memory_db/memory.db
MEMORY_DB_HOST=localhost
MEMORY_DB_PORT=3306
MEMORY_DB_USER=
MEMORY_DB_PASSWORD=
MEMORY_DB_NAME=memory_x

# 记忆配置
MEMORY_MAX_SHORT_TERM=10
MEMORY_MAX_WORKING_MEMORY=100
MEMORY_IMPORTANCE_THRESHOLD=3
MEMORY_TTL_DAYS=365
MEMORY_MAX_CONTEXT_ROUNDS=50
MEMORY_ENTITY_RECOGNITION=true
MEMORY_INTENT_DETECTION=true

# API配置
MEMORY_API_RATE_LIMIT=1000
MEMORY_API_TIMEOUT=30
MEMORY_CORS_ORIGINS=*
MEMORY_MAX_REQUEST_SIZE=16777216
MEMORY_ENABLE_COMPRESSION=true

# 日志配置
MEMORY_LOG_LEVEL=INFO
MEMORY_LOG_FILE=./logs/memory.log
MEMORY_LOG_MAX_BYTES=10485760
MEMORY_LOG_BACKUP_COUNT=5

# 安全配置
MEMORY_SECRET_KEY=your-secret-key-here
MEMORY_JWT_SECRET=your-jwt-secret-here
MEMORY_JWT_EXPIRE_HOURS=24
MEMORY_PASSWORD_SALT_ROUNDS=12
MEMORY_ENABLE_RATE_LIMITING=true

# 缓存配置
MEMORY_CACHE_TYPE=memory
MEMORY_REDIS_URL=redis://localhost:6379/0
MEMORY_CACHE_TIMEOUT=300
MEMORY_CACHE_MAX_SIZE=1000
